# ============================================
# AFL TRACKER SELF-HOSTING - CONFIGURATION
# ============================================

# Application
NODE_ENV=production
APP_NAME="AFL Tracker"
APP_URL=https://tracker.yourdomain.com
PORT=3000

# Database (MySQL/MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=afl_tracker
DB_USER=afl_user
DB_PASSWORD=your_secure_password
DB_CONNECTION_LIMIT=10

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=your_jwt_secret_key_change_this
API_KEY=your_api_key_change_this
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Tracker Settings
TRACKER_PORT=3001
TRACKER_DOMAIN=track.yourdomain.com
CLICK_ID_PREFIX=afl_

# API Settings
API_PORT=3002
API_DOMAIN=api.yourdomain.com

# Dashboard Settings (Frontend)
DASHBOARD_DOMAIN=dashboard.yourdomain.com

# Postback Settings
POSTBACK_PORT=3003
POSTBACK_DOMAIN=postback.yourdomain.com

# Worker Settings
WORKER_CONCURRENCY=5
QUEUE_BATCH_SIZE=100

# Anti-Fraud Settings
FRAUD_DETECTION_ENABLED=true
FRAUD_PRESET=medium
BOT_SCORE_THRESHOLD=70

# Monitoring
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ALERT_ENABLED=true

# Cost Sync (Optional)
FACEBOOK_ACCESS_TOKEN=
GOOGLE_ADS_DEVELOPER_TOKEN=
TIKTOK_ACCESS_TOKEN=

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Performance
CACHE_TTL=300
QUERY_CACHE_ENABLED=true
COMPRESSION_ENABLED=true
